@using DanhgiaCDR.Models;
@model IList<tblTieuChi>
@{
    ViewData["Title"] = "Danh sách các tiêu chí";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body" style="padding: 50px ;">
                    <div class="row m-b-30" style="align-items: center; margin-bottom: 30px !important;">
                        <div class="col-md-8">
                            <div class="row" style="display: flex; align-items: center;">


                                <div class="col-md-6 mb-3 header" style="box-shadow: none !important; display: flex; justify-content: center; align-items: center; z-index: 0 !important;">


                                    <div class="search-bar" style="padding: 0 8px !important;">
                                        <form class="search-form d-flex align-items-center" method="POST" action="#">
                                            <input type="text" id="keyword" name="keyword" placeholder="Tìm kiếm" title="Enter search keyword">
                                            <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                                        </form>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">


                                    <select class="form-select" aria-label="Default select example">
                                        <option disabled selected>Chọn tiêu chí</option>
                                        <option value="All">Chọn tất cả</option>
                                    </select>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-4" style="text-align: right !important;">


                            <button type="button" class="btn btn-primary rounded-pill" data-bs-toggle="modal" id="btnAdd" data-bs-target="#largeModal"><i class="bi bi-plus"></i> Thêm mới</button>

                            @*THÊM MỚI TIÊU CHÍ *@

                            <div class="modal fade" id="largeModal" tabindex="-1">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header" style="background: #0d6efd;">
                                            <h5 class="modal-title"><strong style="color: #ffff;" id="modal-title"></strong></h5>
                                            <button type="button" style="color: #ffff;" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body" style="text-align: left;">
                                            <div class="col-lg-12">


                                                <!-- Vertical Form -->
                                                <form class="row g-3">
                                                    <input hidden id="idTieuchi" type="text" value="" />
                                                    @*<div class="col-6">
                                                    <label for="inputEmail4" class="form-label"><strong>loại phiếu đánh giá</strong></label>
                                                    <select class="form-select" id="selectlpdg" aria-label="Default select example">
                                                    </select>
                                                    </div>
                                                    <div class="col-6">
                                                    <label for="inputEmail4" class="form-label"><strong>cdr mon hoc</strong></label>
                                                    <select class="form-select" id="selectcdrmh" aria-label="Default select example">
                                                    </select>
                                                    </div>
                                                    <div class="col-6">
                                                    <label for="selectMenu" class="form-label"><strong>tieu chi cha</strong></label>
                                                    <select class="form-select" id="selecttccha" aria-label="Default select example"></select>
                                                    </div>
                                                    *@
                                                    <div class="col-6">
                                                        <label for="selectlpdg" class="form-label"><strong>loại phiếu đánh giá</strong></label>
                                                        <input type="text" class="form-control" id="selectlpdg">
                                                    </div>
                                                    <div class="col-6">
                                                        <label for="tentc" class="form-label"><strong>Tên tiêu chí</strong></label>
                                                        <input type="text" class="form-control" id="tentc">
                                                    </div>
                                                    <div class="col-6">
                                                        <label for="min" class="form-label"><strong>khoảng điểm min</strong></label>
                                                        <input type="text" class="form-control" id="min">
                                                    </div>
                                                    <div class="col-6">
                                                        <label for="max" class="form-label"><strong>khoảng điểm max</strong></label>
                                                        <input type="text" class="form-control" id="max">
                                                    </div>
                                                    <div class="col-6">
                                                        <label for="donggop" class="form-label"><strong>đóng góp cdr</strong></label>
                                                        <input type="text" class="form-control" id="donggop">
                                                    </div>
                                                    <div class="col-6">
                                                        <label for="trongso" class="form-label"><strong>trọng số</strong></label>
                                                        <input type="text" class="form-control" id="trongso">
                                                    </div>
                                                    <div class="col-6">
                                                        <label for="selectcdrmh" class="form-label"><strong>cdr mon hoc</strong></label>
                                                        <input type="text" class="form-control" id="selectcdrmh">
                                                    </div>
                                                    
                                                    <div class="col-6">
                                                        <label for="cap" class="form-label"><strong>tieu chi Cấp</strong></label>
                                                        <input type="number" class="form-control" id="cap">

                                                    </div>
                                                    <div class="col-6">
                                                        <label for="selecttccha" class="form-label"><strong>tieu chi cha</strong></label>
                                                        <input type="number" class="form-control" id="selecttccha">

